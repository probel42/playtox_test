<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.username">playtox_app</property>
		<property name="hibernate.connection.password">playtox</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/playtox_db</property>
<!--		<property name="show_sql">true</property>-->
	</session-factory>
</hibernate-configuration>
